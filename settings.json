{
        "workbench.sideBar.location": "left",
        "workbench.sideBar.width": 120,
        //"workbench.iconTheme": null,
        "workbench.colorTheme": "Monokai",
        "workbench.editor.enablePreview": false,
        "workbench.editor.limit.value": 4,
        "editor.minimap.enabled": false,
        "editor.fontFamily": "'YaHei Consolas Hybrid', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
        "editor.fontSize": 10,
        "editor.tabSize": 8,
        "editor.detectIndentation": true, //hard tab
        //"editor.detectIndentation": false, //soft tab
        "editor.mouseWheelZoom": true,
        "explorer.decorations.badges": false,
        "workbench.colorCustomizations": {
                "editor.selectionHighlightBackground": "#DBA901"
        },
        "files.exclude": {
                "**/gen_headers*": true,
                "**/build.config.*": true,
                "**/.vscode": true,
                "**/.git": true,
                "**/.svn": true,
                "**/.hg": true,
                "**/CVS": true,
                "**/.DS_Store": true,
                "**/arch/alpha": true,
                "**/arch/arc": true,
                "**/arch/arm": true,
                "**/arch/avr32": true,
                "**/arch/blackfin": true,
                "**/arch/c6x": true,
                "**/arch/cris": true,
                "**/arch/csky": true,
                "**/arch/frv": true,
                "**/arch/h8300": true,
                "**/arch/hexagon": true,
                "**/arch/ia64": true,
                "**/arch/m32r": true,
                "**/arch/m68k": true,
                "**/arch/metag": true,
                "**/arch/microblaze": true,
                "**/arch/mips": true,
                "**/arch/mn10300": true,
                "**/arch/nios2": true,
                "**/arch/nds32": true,
                "**/arch/openrisc": true,
                "**/arch/powerpc": true,
                "**/arch/parisc": true,
                "**/arch/riscv": true,
                "**/arch/s390": true,
                "**/arch/score": true,
                "**/arch/sh": true,
                "**/arch/sparc": true,
                "**/arch/tile": true,
                "**/arch/um": true,
                "**/arch/unicore32": true,
                "**/arch/x86": true,
                "**/arch/xtensa": true
        }
}
