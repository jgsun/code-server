{
        "workbench.sideBar.location": "left",
        "workbench.sideBar.width": 120,
        //"workbench.iconTheme": null,
        "workbench.colorTheme": "Monokai",
        "workbench.editor.enablePreview": false,
        "workbench.editor.limit.value": 4,
        "editor.minimap.enabled": false,
        "editor.fontFamily": "'YaHei Consolas Hybrid', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
        "editor.fontSize": 10,
        "editor.tabSize": 8,
        "editor.detectIndentation": true, //hard tab
        //"editor.detectIndentation": false, //soft tab
        "editor.mouseWheelZoom": true,
        "explorer.decorations.badges": false,
        "json.maxItemsComputed": 5700,
        "workbench.colorCustomizations": {
                "editor.selectionHighlightBackground": "#DBA901"
        },
        "files.exclude": {
                "**/gen_headers*": true,
                "**/build.config.*": true,
                "**/.*": true,
                "**/.hg": true,
                "**/.DS_Store": true
        }
}
